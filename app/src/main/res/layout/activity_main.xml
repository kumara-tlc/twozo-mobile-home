<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/theme_light_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_above="@id/content_view"
        android:layout_marginBottom="64dp"
        android:paddingVertical="24dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="logo"
            android:src="@drawable/twozo"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="twozo"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/typo_graphica"
            android:textSize="32sp"
            android:textColor="@color/theme_dark_background" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_outline"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="@color/theme_dark_background"
            android:fontFamily="@font/lexend_semibold" />

        <TextView
            android:id="@+id/sub_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textSize="14sp"
            android:padding="12dp"
            android:textColor="@color/theme_light_sub_title_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_trial"
                android:textSize="13sp"
                android:drawablePadding="2dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/theme_light_primary"
                android:layout_gravity="center_vertical"
                app:drawableStartCompat="@drawable/radio_fill_tick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_card"
                android:textSize="13sp"
                android:drawablePadding="2dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/theme_light_primary"
                android:layout_gravity="center_vertical"
                app:drawableStartCompat="@drawable/radio_fill_tick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="@string/cancel_anytime"
                android:drawablePadding="2dp"
                android:textColor="@color/theme_light_primary"
                android:layout_gravity="center_vertical"
                app:drawableStartCompat="@drawable/radio_fill_tick" />



        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">

        <RelativeLayout
            android:id="@+id/twozo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/green_button"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twozo_business"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lexend_semibold"
                android:textSize="16sp"
                android:textColor="@color/theme_dark_background"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/about_us"
            android:clickable="true"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/theme_light_secondary"/>

    </RelativeLayout>

</RelativeLayout>
